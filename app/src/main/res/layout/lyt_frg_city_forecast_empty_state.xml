<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lyt_frg_city_forecast_empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ImageView
            android:id="@+id/lyt_frg_city_forecast_empty_state_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:freezesText="true"
            android:src="@drawable/ic_stress"
            app:layout_constraintBottom_toTopOf="@+id/lyt_frg_city_forecast_empty_state_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:src="@drawable/ic_stress" />

        <TextView
            android:id="@+id/lyt_frg_city_forecast_empty_state_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:freezesText="true"
            android:text="@string/not_coordinates"
            android:textColor="@color/text_color_error"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lyt_frg_city_forecast_empty_state_icon"

            tools:text="@string/not_coordinates" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>